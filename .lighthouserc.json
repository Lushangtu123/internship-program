{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "url": ["http://localhost:3000"]
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "resource-summary.script.size": ["error", { "maxNumericValue": 200000 }],
        "max-potential-fid": ["warn", { "maxNumericValue": 150 }]
      }
    }
  }
}

